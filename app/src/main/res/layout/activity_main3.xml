<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kim_wonhee.a170413.Main3Activity"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_span="2"
        android:background="#4e71a7"
        android:gravity="center"
        android:padding="10dp"
        android:text="선택한 맛집 정보입니다."
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ddfef8f8">

        <TableRow
            android:layout_marginTop="20dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_weight="1"
                android:gravity="center"
                android:text="이름"
                android:textSize="10pt"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:padding="3dp">

            <ImageView
                android:id="@+id/imgno"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/chicken" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <ImageView
                            android:layout_width="8pt"
                            android:layout_height="8pt"
                            android:src="@drawable/one"
                            android:layout_gravity="center"
                            android:layout_marginRight="5pt"/>
                        <TextView
                            android:id="@+id/tvMenu1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:padding="3dp"
                            android:text="메뉴1(가격)"
                            android:textSize="8pt" />
                        </TableRow>
                </TableLayout>


                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <ImageView
                            android:layout_width="8pt"
                            android:layout_height="8pt"
                            android:src="@drawable/two"
                            android:layout_gravity="center"
                            android:layout_marginRight="5pt"/>
                        <TextView
                            android:id="@+id/tvMenu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:padding="3dp"
                            android:text="메뉴2(가격)"
                            android:textSize="8pt" />
                    </TableRow>
                </TableLayout>


                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <ImageView
                            android:layout_width="8pt"
                            android:layout_height="8pt"
                            android:src="@drawable/three"
                            android:layout_gravity="center"
                            android:layout_marginRight="5pt"/>

                        <TextView
                            android:id="@+id/tvMenu3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:padding="3dp"
                            android:text="메뉴3(가격)"
                            android:textSize="8pt" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tel:"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:padding="3dp"
                android:text="전화번호"
                android:textColor="#ff0000"
                android:textSize="7pt" />

            <ImageButton
                android:id="@+id/imageView2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="#00ffffff"
                android:onClick="onClick"
                android:src="@drawable/phone"
                android:scaleType="centerInside"/>
        </TableRow>

        <TableRow android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Homepage:"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:padding="3dp"
                android:text="홈페이지주소"
                android:textColor="#0000ff"
                android:textSize="7pt" />

            <ImageButton
                android:id="@+id/imageView3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="#00ffffff"
                android:onClick="onClick"
                android:src="@drawable/star"
                android:scaleType="centerInside"/>
        </TableRow>

        <TableRow android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="등록일:"
                android:textSize="8pt"/>

            <TextView
                android:id="@+id/tvRegdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="등록일자"
                android:textSize="8pt"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="뒤로가기" />
    </LinearLayout>
</LinearLayout>

